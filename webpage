<body>
  <div class="login-container">
    <img src="https://www.csa.gov.sg/-/media/csa/images/cls/cls-md-logo.png" alt="CLS(MD) Logo">
    <h2>Login</h2>
    <form id="loginForm">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit">Login</button>
      <p class="error-message" id="errorMessage">Invalid username or password.</p>
    </form>
  </div>

  <script>
    const form = document.getElementById('loginForm');
    const errorMessage = document.getElementById('errorMessage');

    // Replace these with the correct credentials if needed
    const correctUsername = "admin";
    const correctPassword = "password123";

    form.addEventListener('submit', function(event) {
      event.preventDefault();

      const username = form.username.value;
      const password = form.password.value;

      if (username === correctUsername && password === correctPassword) {
        alert("Login successful!");
      } else {
        errorMessage.style.display = 'block';
      }
    });
  </script>
